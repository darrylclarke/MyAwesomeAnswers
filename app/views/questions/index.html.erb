<h1>All Questions</h1>

<!--<%#= form_for %>  use with a single element -->
<%= form_tag questions_path, method: :get do %>
    <%= search_field_tag :search, params[:search] %>
    <%= submit_tag "Search", class: "btn btn-primary btn-sm" %>
    <!--This creates the following URL, and sends it to itself, that's why you see the search
        term repeat on the next view of the form.-->
    <!--http://localhost:3000/questions?utf8=%E2%9C%93&search=Productize&commit=Search-->
    
    <!--`search_field_tag :search, params[:search]` ==> This picks up the params[], which 
        come from the URL.  There are no other params in a form with GET.-->
<% end %>
    
    <!--Ordering-->
    <%= link_to "Order by Title", questions_path( search: params[:search], order: "title"), class: "btn btn-primary btn-sm"%>
    <%= link_to "Order by Body", questions_path( search: params[:search], order: "body"), class: "btn btn-primary btn-sm" %>
    
<% @questions.each do |q| %>
	
   <%# These three are the same: %>
   <%# = link_to q.title, question_path(q) %>              <%# {id: q.id}  same, future just put 'q'%>
   <%# = link_to q.title, question_path( {id: q.id} ) %> 
   <div>
   		<%= link_to q.title, q %> 
   </div>
	   
<% end %>